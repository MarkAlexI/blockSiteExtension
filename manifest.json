{
  "manifest_version": 3,
  "name": "Block Site Extension",
  "short_name": "Block Site Ext",
  "description": "Effortlessly block and redirect websites with customizable rules to stay focused and productive.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "192": "images/icon-192.png"
  },
  "permissions": ["declarativeNetRequestWithHostAccess", "storage"],
  "host_permissions": ["*://*/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Block Site Extension"
  }
}